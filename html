    <script>
        // Inicialização do Google Maps
        function initMap() {
            var location = { lat: -23.550520, lng: -46.633308 }; // São Paulo, Brasil
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 14,
                center: location
            });
            var marker = new google.maps.Marker({
                position: location,
                map: map
            });
        }

        // Gráfico de vendas de pizza
        var ctx = document.getElementById('pizzaChart').getContext('2d');
        var pizzaChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Calabresa', 'Quatro Queijos', 'Frango com Catupiry', 'Portuguesa', 'Marguerita'],
                datasets: [{
                    label: 'Vendas Mensais',
                    data: [120, 150, 180, 100, 130],
                    backgroundColor: ['#d35400', '#e67e22', '#f39c12', '#c0392b', '#9b59b6']
                }]
            }
        });
    </script>
